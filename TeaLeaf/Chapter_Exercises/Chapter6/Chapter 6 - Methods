# An example of Table of Contents
line_width = 40
chap1 = 'Chapter 1: '
chap2 = 'Chapter 2: '
chap3 = 'Chapter 3: '

chap1_name = 'Getting Started'
chap2_name = 'Numbers'
chap3_name = 'Letters'

chap1_pg = 'page 1'
chap2_pg = 'page 9'
chap3_pg = 'page 13'

puts
puts
puts (chap1.to_s + ' ' + chap1_name.to_s().line_width/2) + (chap1_pg.rjust (line_width/2))
puts (chap2.ljust(line_width/3)) + (chap2_name.ljust(line_width/3)) + (chap2_pg.rjust(line_width))
puts (chap3.ljust(line_width/3)) + (chap3_name.ljust(line_width/3)) + (chap3_pg.rjust(line_width))

puts
